<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.milite.mapper.BattleConstantsMapper">

	<select id="getAllConstants" resultType="HashMap">
		select name, value from
		Battle_Constants
	</select>

	<select id="getTypeConstants" resultType="HashMap">
		select name, value from
		Battle_Constants where type = #{type} order by name
	</select>

	<select id="getNameConstants" resultType="double">
		select value from
		Battle_Constants where name = #{name}
	</select>

</mapper>